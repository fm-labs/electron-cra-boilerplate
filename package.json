{
  "name": "electron-cra-boilerplate",
  "description": "Electron CRA boilerplate application",
  "keywords": [
    "electron",
    "electron-forge",
    "react",
    "reactjs",
    "cra",
    "create-react-app"
  ],
  "author": {
    "name": "fm-labs",
    "email": "opensource@fmlabs.eu",
    "url": "https://github.com/fm-labs"
  },
  "license": "MIT",
  "version": "0.1.0",
  "main": "main/electron.js",
  "private": true,
  "dependencies": {
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^27.5.2",
    "@types/node": "^16.18.11",
    "@types/react": "^18.0.27",
    "@types/react-dom": "^18.0.10",
    "electron-is-dev": "^2.0.0",
    "electron-squirrel-startup": "^1.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "5.0.1",
    "typescript": "^4.9.4",
    "web-vitals": "^2.1.4"
  },
  "scripts": {
    "dev": "concurrently -k \"BROWSER=none PORT=3000 npm start\" \"npm:electron\"",
    "electron": "wait-on tcp:3000 && electron-forge start",
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "test:nowatch": "react-scripts test --watchAll=false",
    "eject": "react-scripts eject",
    "package": "react-scripts build && electron-forge package --verbose",
    "make": "react-scripts build && electron-forge make",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest",
      "plugin:prettier/recommended"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.4",
    "@electron-forge/maker-deb": "^6.0.4",
    "@electron-forge/maker-rpm": "^6.0.4",
    "@electron-forge/maker-squirrel": "^6.0.4",
    "@electron-forge/maker-zip": "^6.0.4",
    "concurrently": "^7.6.0",
    "electron": "^22.1.0",
    "electron-packager": "^17.1.1",
    "eslint": "^8.27.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "prettier": "^2.6.1",
    "wait-on": "^7.0.1"
  },
  "homepage": "."
}
